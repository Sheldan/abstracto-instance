<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>executable-jar</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/BOOT-INF/classes/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <includes>
                <include>dev.sheldan.crimson:executable:jar</include>
            </includes>
            <excludes>
                <exclude>dev.sheldan.crimson:executable:jar:exec</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <includes>
                <include>dev.sheldan.crimson:executable:jar:exec</include>
            </includes>
            <unpackOptions>
                <includes>
                    <include>org/</include>
                </includes>
                <excludes>
                    <exclude>BOOT-INF/*</exclude>
                    <exclude>META-INF/*</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/BOOT-INF/lib/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>dev.sheldan.crimson:executable:jar</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>/BOOT-INF/lib/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <excludes>
                <exclude>dev.sheldan.crimson:executable:jar</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>